.aside {
 
  position:absolute;
  border:0px solid black;
  text-align:center;
  width: 220px;
  height: auto; /* 필요에 따라 높이를 조정하세요. */
  background-color: white; /* 배경색은 원하는 색으로 변경하세요. */
  color: #000; /* 글자 색은 원하는 색으로 변경하세요. */
  font-size: 30px; /* 글자 크기는 원하는 크기로 변경하세요. */
  padding: 0px;
  z-index: 0; /* menu-list보다 위에 표시하기 위해 더 큰 값을 지정합니다. */
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); /* 그림자 효과 추가 */
}
.aside a {
  color: #300000;
  text-decoration: none; 
}
.new-aside {
  position: fixed;
  top: 65%;
  right: 50px;
  transform: translateY(-50%);
  width: 80px;
  height: auto;
  background-color:white;
  color: #000;
  font-size: 16px;
  padding: 0px;
  z-index: 1;
}

.new-aside a {
  color: #300000;
  text-decoration: none;
}


.container {
  width: 800px; /* 원하는 가로 너비를 지정하세요. */
  padding: 20px; /* 필요에 따라 내부 여백을 조정하세요. */
  text-align:center;
  border : 1px solid red;
  margin-left:300px;
  padding-bottom: 50px;
}
.flex-container {
  width:800px;
  height:600px;
}
.flex-item {
  flex: 1; /* 남은 공간을 모두 차지하도록 설정합니다. */
}
.menu {
  position: relative;
}
.menu-list {
  display : none;
  position : absolute;
  top: 40%;      /*  커질수록 간격커짐  */
  left:0;
  font-size:25px;
  padding-left:0;
  list-style: none;
  background:#79ABFF;    /* 내려오는 메뉴 색깔 */
  z-index: 1; /* menu-list보다 위에 표시하기 위해 더 큰 값을 지정합니다. */
}

.menu-list li {
  padding: 10px;
  text-align: center;
}

.menu-btn:hover + .menu-list,
.menu-list:hover {
  display: block;
}

.menu2 {
  position: relative;
}

.menu-list2 {
  display: none;
  position: absolute;
  top: 40%;
  left: 0;
  font-size: 25px;
  padding-left: 0;
  list-style: none;
  background: #62C15B;
  z-index: 1;
}

.menu-list2 li {
  padding: 10px;
  text-align: center;
}

.menu-btn2:hover + .menu-list2,
.menu-list2:hover {
  display: block;
}


.input-container {
  position: relative;
  display: inline-block;
  bottom: 8px;
}

.input-icon {
  position: absolute;
  bottom: 10px;
  left: 10px;
  width: 35px;
  height: 35px;
  pointer-events: none; /* 이미지 클릭 방지 */
  opacity: 0.5;
}


.search {
  font-size: 30px; /* 폰트 크기 조정 */
  width: 470px; /* 검색창 너비 설정 */
  height: 35px; /* 검색창 높이 설정 */
  border: 1px solid #B0D0D6; /* 테두리 없음 */
  border-radius: 5px; /* 둥글게 만들기 */
  padding: 10px; /* 내부 여백 설정 */
  background-color: #F8FFFF; /* 배경색 설정 */
  color: #333; /* 글자 색 설정 */
  transition: width 0.3s, font-size 0.3s; /* 애니메이션 효과 설정 */
  padding-left: 50px; /* 아이콘의 너비만큼 여백을 두고 글씨를 시작하도록 설정 */
}

.button {
  font-size: 20px;
  width: 100px;
  height: 50px;
  background-color: #6C8ED2; /* 초록색 톤의 배경색 */
  border: none; /* 테두리 없음 */
  border-radius: 25px; /* 둥글게 만들기 */
  color: white;
  cursor: pointer;
  transition: background-color 0.3s, transform 0.2s;
}

.button:hover {
  background-color: #489FAE; /* 호버 상태에서 배경색 변경 */
  transform: scale(1.05); /* 호버 상태에서 약간 크게 만들기 */
}
